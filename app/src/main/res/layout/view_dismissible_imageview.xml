<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/bit_margin"
        android:layout_marginEnd="@dimen/bit_margin"
        android:src="@drawable/rectangle_rounded"
        android:contentDescription="@string/image_display" />

    <ImageButton
        android:id="@+id/button_dismiss"
        android:layout_width="@dimen/xxs_icon_size"
        android:layout_height="@dimen/xxs_icon_size"
        android:layout_gravity="top|end"
        android:background="@drawable/ic_dismiss"
        android:contentDescription="@string/action_dismiss"
        android:scaleType="fitCenter" />

</FrameLayout>

